<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ManageInventory">

    <include
        android:id="@+id/toolbar_manage_customers"
        layout="@layout/toolbar_my_layout"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout2_inventory"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="169dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/tab1_inv"
            android:layout_height="wrap_content"
            android:text="All Products" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:id="@+id/tab2_inv"
            android:layout_height="wrap_content"
            android:text="Available Products" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab3_inv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unavailable Products" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:id="@+id/pageviewer2_inv"
        android:layout_height="match_parent"/>


</LinearLayout>